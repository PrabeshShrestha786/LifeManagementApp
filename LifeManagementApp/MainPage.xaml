<ContentPage
    x:Class="LifeManagementApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:LifeManagementApp.ViewModels">

    <!-- Bind this page to NotesViewModel -->
    <ContentPage.BindingContext>
        <vm:NotesViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label
                Text="My Notes"
                FontSize="24"
                HorizontalOptions="Center" />

            <!-- Editor bound to NewNoteText in the ViewModel -->
            <Editor
                x:Name="NoteEditor"
                HeightRequest="120"
                Placeholder="Write your note here..."
                Text="{Binding NewNoteText}" />

            <!-- Button bound to SaveCommand (from [RelayCommand] Save) -->
            <Button
                Text="Save"
                Command="{Binding SaveCommand}" />

            <!-- List of notes bound to Notes collection -->
            <CollectionView
                ItemsSource="{Binding Notes}"
                Margin="0,20,0,0">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            Padding="10"
                            Margin="0,0,0,5"
                            HasShadow="False"
                            BorderColor="LightGray"
                            BackgroundColor="LightYellow">
                            <VerticalStackLayout>
                                <Label
                                    Text="{Binding Text}"
                                    FontSize="16"
                                    TextColor="Black"
                                    LineBreakMode="WordWrap" />
                                <Label
                                    Text="{Binding CreatedAt, StringFormat='{}{0:G}'}"
                                    FontSize="10"
                                    TextColor="Gray" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
