<ContentPage
    x:Class="LifeManagementApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Joke of the day -->
            <Label
                Text="Joke of the day"
                FontSize="20"
                FontAttributes="Bold" />

            <Label
                Text="{Binding JokeOfTheDay}"
                LineBreakMode="WordWrap" />

            <!-- Notes section -->
            <Label
                Text="My Notes"
                FontSize="24"
                HorizontalOptions="Center" />

            <Editor
                Placeholder="Write your note here..."
                HeightRequest="120"
                Text="{Binding NewNoteText}" />

            <Button
                Text="Save"
                Command="{Binding SaveCommand}" />

            <CollectionView
                ItemsSource="{Binding Notes}"
                Margin="0,20,0,0">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Stroke="LightGray"
                            BackgroundColor="LightYellow"
                            Padding="10"
                            Margin="0,0,0,5">
                            <VerticalStackLayout>
                                <Label
                                    Text="{Binding Text}"
                                    FontSize="16"
                                    TextColor="Black"
                                    LineBreakMode="WordWrap" />
                                <Label
                                    Text="{Binding CreatedAt, StringFormat='{}{0:G}'}"
                                    FontSize="10"
                                    TextColor="Gray" />
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
