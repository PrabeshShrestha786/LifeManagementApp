<ContentPage
    x:Class="LifeManagementApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Notes">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Joke of the Day -->
            <Label 
                Text="Joke of the day"
                FontSize="22"
                FontAttributes="Bold"
                HorizontalOptions="Center" />

            <Label 
                Text="{Binding JokeOfTheDay}"
                FontSize="16"
                LineBreakMode="WordWrap" />

            <!-- Notes Section -->
            <Label 
                Text="Add a New Note"
                FontSize="20"
                Margin="0,20,0,0" />

            <Editor
                Placeholder="Type your note here..."
                Text="{Binding NewNoteText}"
                AutoSize="TextChanges"
                HeightRequest="120"
                BackgroundColor="White"
                />

            <Button
                Text="Save Note"
                Command="{Binding SaveCommand}"
                BackgroundColor="#0078D4"
                TextColor="White"
                CornerRadius="10"
                />

            <Label 
                Text="Saved Notes"
                FontSize="20"
                Margin="0,20,0,0" />

            <!-- Notes List -->
            <CollectionView 
                ItemsSource="{Binding Notes}"
                Margin="0,10,0,0">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Stroke="LightGray"
                            BackgroundColor="LightYellow"
                            Margin="0,0,0,10"
                            Padding="10"
                            StrokeShape="RoundRectangle 10">

                            <VerticalStackLayout>

                                <Label
                                    Text="{Binding Text}"
                                    FontSize="16"
                                    TextColor="Black"
                                    LineBreakMode="WordWrap" />

                                <Label
                                    Text="{Binding CreatedAt, StringFormat='Added on: {0:yyyy-MM-dd HH:mm}'}"
                                    FontSize="10"
                                    TextColor="Gray" />

                            </VerticalStackLayout>

                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
